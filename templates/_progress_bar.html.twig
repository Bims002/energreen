{# Barre de progression interactive #}
<div class="progress-container">
	<div class="progress-steps">
		<div class="progress-line">
			<div class="progress-line-fill" id="progressFill" style="width: 16.66%;"></div>
		</div>
		<div class="progress-step active" data-section="logement">
			<div class="progress-step-circle">
				<i class="fas fa-home"></i>
			</div>
			<span class="progress-step-label">Logement</span>
		</div>
		<div class="progress-step" data-section="numerique">
			<div class="progress-step-circle">
				<i class="fas fa-laptop"></i>
			</div>
			<span class="progress-step-label">Numérique</span>
		</div>
		<div class="progress-step" data-section="electro">
			<div class="progress-step-circle">
				<i class="fas fa-blender"></i>
			</div>
			<span class="progress-step-label">Électroménager</span>
		</div>
		<div class="progress-step" data-section="alim">
			<div class="progress-step-circle">
				<i class="fas fa-utensils"></i>
			</div>
			<span class="progress-step-label">Alimentation</span>
		</div>
		<div class="progress-step" data-section="transports">
			<div class="progress-step-circle">
				<i class="fas fa-car"></i>
			</div>
			<span class="progress-step-label">Transports</span>
		</div>
		<div class="progress-step" data-section="textile">
			<div class="progress-step-circle">
				<i class="fas fa-tshirt"></i>
			</div>
			<span class="progress-step-label">Textile</span>
		</div>
	</div>
</div>
