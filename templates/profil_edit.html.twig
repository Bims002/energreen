{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - ENERGREEN
{% endblock %}

{% block body %}
	<style>
		body {
			background-color: #f0f4f1;
			font-family: sans-serif;
		}
		.profile-container {
			max-width: 600px;
			margin: 50px auto;
			padding: 30px;
			background: white;
			border-radius: 12px;
			box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
			border-top: 5px solid #2e7d32;
		}
		.profile-title {
			color: #2e7d32;
			text-align: center;
			margin-bottom: 25px;
		}
		.form-group {
			margin-bottom: 15px;
		}
		label {
			display: block;
			margin-bottom: 5px;
			font-weight: bold;
			color: #333;
		}
		input {
			width: 100%;
			padding: 12px;
			border: 1px solid #ccc;
			border-radius: 8px;
			box-sizing: border-box;
			font-size: 1rem;
		}
		input[readonly] {
			background-color: #f4f4f4;
			color: #777;
			cursor: not-allowed;
			border: 1px dashed #bbb;
		}

		.save-button {
			width: 100%;
			background-color: #2e7d32;
			color: white;
			border: none;
			padding: 14px;
			border-radius: 8px;
			font-weight: bold;
			cursor: pointer;
			margin-top: 10px;
		}

		.action-buttons {
			display: flex;
			gap: 15px;
			margin-top: 20px;
			width: 100%;
		}
		.btn-action {
			flex: 1;
			padding: 12px;
			border-radius: 8px;
			font-weight: bold;
			text-align: center;
			text-decoration: none;
			font-size: 0.95rem;
			display: block;
			box-sizing: border-box;
			border: none;
			cursor: pointer;
		}
		.btn-secondary {
			background-color: #6c757d;
			color: white;
		}
		.btn-danger {
			background-color: #dc3545;
			color: white;
			width: 100%;
		}

		.alert {
			padding: 10px;
			border-radius: 5px;
			margin-bottom: 15px;
			text-align: center;
		}
		.alert-success {
			background-color: #d4edda;
			color: #155724;
		}
		.alert-error {
			background-color: #f8d7da;
			color: #721c24;
		}

		/* Styles pour la protection par mot de passe */
		.password-protection {
			text-align: center;
		}
		.lock-icon {
			font-size: 4rem;
			color: #2e7d32;
			margin-bottom: 20px;
		}
		.hidden {
			display: none;
		}
		.password-input-group {
			position: relative;
			margin-bottom: 20px;
		}
		.verify-button {
			width: 100%;
			background-color: #2e7d32;
			color: white;
			border: none;
			padding: 14px;
			border-radius: 8px;
			font-weight: bold;
			cursor: pointer;
			font-size: 1rem;
		}
		.verify-button:hover {
			background-color: #246d28;
		}
		.password-wrapper {
			position: relative;
		}
		.password-wrapper input {
			padding-right: 45px;
		}
		.toggle-password {
			position: absolute;
			right: 12px;
			top: 50%;
			transform: translateY(-50%);
			cursor: pointer;
			color: #666;
			font-size: 1.2rem;
			user-select: none;
		}
		.toggle-password:hover {
			color: #2e7d32;
		}
	</style>

	<div class="profile-container">
		<h1 class="profile-title">Modifier mon profil</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">{{ message }}</div>
		{% endfor %}

		{% for message in app.flashes('error') %}
			<div class="alert alert-error">{{ message }}</div>
		{% endfor %}

		{% if app.user %}
			<!-- Section de vérification du mot de passe -->
			<div id="password-protection" class="password-protection">
				<div class="lock-icon">
					<i class="fas fa-lock"></i>
				</div>
				<h3 style="color: #333; margin-bottom: 10px;">Sécurité</h3>
				<p style="color: #666; margin-bottom: 25px;">
					Pour modifier votre profil, veuillez entrer votre mot de passe actuel
				</p>
				<div class="password-input-group password-wrapper">
					<input type="password" id="verify-password-input" placeholder="Mot de passe actuel" required>
					<span class="toggle-password" onclick="toggleVerifyPassword()">
						<i class="fas fa-eye"></i>
					</span>
				</div>
				<button type="button" id="verify-password-btn" class="verify-button">
					<i class="fas fa-unlock me-2"></i>Déverrouiller
				</button>
				<div id="password-error" class="alert alert-error hidden" style="margin-top: 15px;">
					Mot de passe incorrect
				</div>
			</div>

			<!-- Formulaire d'édition (masqué par défaut) -->
			<div id="edit-form-section" class="hidden">
				<form method="POST" action="{{ path('app_profile_update') }}">
					<div class="form-group">
						<label>Email</label>
						<input type="email" name="email" value="{{ app.user.email }}" required>
					</div>

					<div style="display: flex; gap: 15px;">
						<div class="form-group" style="flex: 1;">
							<label>Nom</label>
							<input type="text" name="nom" value="{{ app.user.nom }}" required>
						</div>
						<div class="form-group" style="flex: 1;">
							<label>Prénom</label>
							<input type="text" name="prenom" value="{{ app.user.prenom }}">
						</div>
					</div>

					<div class="form-group">
						<label>Statut Professionnel</label>
						<input type="text" value="{{ app.user.statutPro }}" readonly>
					</div>

					<div class="form-group">
						<label>Nouveau mot de passe</label>
						<div class="password-wrapper">
							<input type="password" id="new-password" name="new_password" placeholder="Laisser vide pour ne pas changer">
							<span class="toggle-password" onclick="toggleNewPassword()">
								<i class="fas fa-eye"></i>
							</span>
						</div>
					</div>

					<div class="form-group">
						<label>Confirmer le nouveau mot de passe</label>
						<div class="password-wrapper">
							<input type="password" id="confirm-password" name="confirm_password" placeholder="Confirmer le nouveau mot de passe">
							<span class="toggle-password" onclick="toggleConfirmPassword()">
								<i class="fas fa-eye"></i>
							</span>
						</div>
					</div>


					<input type="hidden" name="_csrf_token" value="{{ csrf_token('update-profile') }}">

					<button type="submit" class="save-button">Enregistrer les modifications</button>
				</form>

				<div class="action-buttons">
					<a href="{{ path('app_energreen_profil') }}" class="btn-action btn-secondary">Retour au profil</a>

					<form action="{{ path('app_profile_delete') }}" method="POST" onsubmit="return confirm('Supprimer définitivement votre compte ?');" style="flex: 1;">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-account') }}">
						<button type="submit" class="btn-action btn-danger">Supprimer le compte</button>
					</form>
				</div>

				<p style="text-align: center; color: #888; font-size: 0.8rem; margin-top: 20px;">
					Membre depuis le :
					{{ app.user.createdAt|date('d/m/Y') }}
				</p>
			</div>
		{% endif %}
	</div>

	<script>
		document.getElementById('verify-password-btn').addEventListener('click', function () {
const password = document.getElementById('verify-password-input').value;
const errorDiv = document.getElementById('password-error');

if (! password) {
errorDiv.textContent = 'Veuillez entrer votre mot de passe';
errorDiv.classList.remove('hidden');
return;
}

// Vérification du mot de passe via AJAX
fetch('{{ path('app_profile_verify_password') }}', {
method: 'POST',
headers: {
'Content-Type': 'application/json'
},
body: JSON.stringify(
{password: password}
)
}).then(response => response.json()).then(data => {
if (data.success) { // Masquer la protection et afficher le formulaire
document.getElementById('password-protection').classList.add('hidden');
document.getElementById('edit-form-section').classList.remove('hidden');
} else {
errorDiv.textContent = 'Mot de passe incorrect';
errorDiv.classList.remove('hidden');
}
}).catch(error => {
console.error('Erreur:', error);
errorDiv.textContent = 'Une erreur est survenue';
errorDiv.classList.remove('hidden');
});
});

// Permettre la validation avec la touche Entrée
document.getElementById('verify-password-input').addEventListener('keypress', function (e) {
if (e.key === 'Enter') {
e.preventDefault();
document.getElementById('verify-password-btn').click();
}
});

// Fonction pour afficher/cacher le mot de passe
function toggleVerifyPassword() {
const passwordInput = document.getElementById('verify-password-input');
const toggleIcon = document.querySelector('.toggle-password');

if (passwordInput.type === 'password') {
passwordInput.type = 'text';
toggleIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
} else {
passwordInput.type = 'password';
toggleIcon.innerHTML = '<i class="fas fa-eye"></i>';
}
}

// Fonction pour afficher/cacher le nouveau mot de passe
function toggleNewPassword() {
const passwordInput = document.getElementById('new-password');
const toggleIcon = passwordInput.parentElement.querySelector('.toggle-password');

if (passwordInput.type === 'password') {
passwordInput.type = 'text';
toggleIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
} else {
passwordInput.type = 'password';
toggleIcon.innerHTML = '<i class="fas fa-eye"></i>';
}
}

// Fonction pour afficher/cacher la confirmation du mot de passe
function toggleConfirmPassword() {
const passwordInput = document.getElementById('confirm-password');
const toggleIcon = passwordInput.parentElement.querySelector('.toggle-password');

if (passwordInput.type === 'password') {
passwordInput.type = 'text';
toggleIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
} else {
passwordInput.type = 'password';
toggleIcon.innerHTML = '<i class="fas fa-eye"></i>';
}
}
	</script>
{% endblock %}
