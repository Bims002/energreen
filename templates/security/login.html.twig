{% extends 'base.html.twig' %}

{% block title %}Connexion-ENERGREEN
{% endblock %}

{% block body %}
	<style>
		body {
			background: linear-gradient(135deg, #f0f4f1 0%, #e8f0eb 100%);
			font-family: 'Montserrat', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			min-height: 100vh;
		}
		
		.login-container {
			display: flex;
			justify-content: center;
			align-items: center;
			min-height: calc(100vh - 100px);
			padding: 20px;
		}
		
		.login-card {
			background: white;
			padding: 40px;
			border-radius: 20px;
			box-shadow: 0 10px 40px rgba(26, 54, 28, 0.15);
			width: 100%;
			max-width: 450px;
			border-top: 4px solid #1a361c;
			position: relative;
			animation: fadeInUp 0.5s ease-out;
		}
		
		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}
		
		.login-card::before {
			content: '⚡';
			position: absolute;
			top: -30px;
			left: 50%;
			transform: translateX(-50%);
			font-size: 60px;
			background: white;
			width: 80px;
			height: 80px;
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			box-shadow: 0 4px 15px rgba(26, 54, 28, 0.2);
		}
		
		.welcome-title {
			color: #1a361c;
			text-align: center;
			font-weight: 700;
			margin-bottom: 10px;
			margin-top: 20px;
			font-size: 1.8rem;
			letter-spacing: 1px;
		}
		
		.subtitle {
			text-align: center;
			color: #666;
			margin-bottom: 30px;
			font-size: 0.95rem;
			font-weight: 400;
		}
		
		.form-group {
			margin-bottom: 20px;
		}
		
		label {
			display: block;
			margin-bottom: 8px;
			color: #1a361c;
			font-weight: 600;
			font-size: 0.9rem;
			text-transform: uppercase;
			letter-spacing: 0.5px;
		}
		
		.form-control {
			width: 100%;
			padding: 14px 16px;
			border: 2px solid #e0e0e0;
			border-radius: 10px;
			box-sizing: border-box;
			font-size: 1rem;
			transition: all 0.3s ease;
			background-color: #fafafa;
		}
		
		.form-control:focus {
			outline: none;
			border-color: #1a361c;
			background-color: white;
			box-shadow: 0 0 0 3px rgba(26, 54, 28, 0.1);
		}
		
		.form-control:hover {
			border-color: #1a361c;
		}
		
		.checkbox {
			display: flex;
			align-items: center;
			gap: 10px;
			margin-bottom: 20px;
		}
		
		.checkbox label {
			margin-bottom: 0;
			text-transform: none;
			font-weight: 400;
			color: #555;
			cursor: pointer;
		}
		
		.checkbox input[type="checkbox"] {
			width: 18px;
			height: 18px;
			cursor: pointer;
			accent-color: #1a361c;
		}
		
		.btn-login {
			width: 100%;
			background: linear-gradient(135deg, #1a361c 0%, #142a15 100%);
			color: white;
			border: none;
			padding: 16px;
			border-radius: 10px;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			transition: all 0.3s ease;
			margin-top: 10px;
			text-transform: uppercase;
			letter-spacing: 1px;
			box-shadow: 0 4px 15px rgba(26, 54, 28, 0.3);
		}
		
		.btn-login:hover {
			background: linear-gradient(135deg, #142a15 0%, #0f1f10 100%);
			transform: translateY(-2px);
			box-shadow: 0 6px 20px rgba(26, 54, 28, 0.4);
		}
		
		.btn-login:active {
			transform: translateY(0);
		}
		
		.alert-danger {
			background-color: #fee2e2;
			color: #b91c1c;
			padding: 14px;
			border-radius: 10px;
			margin-bottom: 25px;
			text-align: center;
			border-left: 4px solid #b91c1c;
			font-size: 0.9rem;
		}
		
		.link-register {
			text-align: center;
			margin-top: 25px;
			font-size: 0.9rem;
			color: #666;
		}
		
		.link-register a {
			color: #1a361c;
			text-decoration: none;
			font-weight: 600;
			transition: color 0.3s ease;
		}
		
		.link-register a:hover {
			color: #493315;
			text-decoration: underline;
		}
	</style>

	<div class="login-container">
		<div class="login-card">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{# --- MODIFICATION DU H1 ICI --- #}
				<h1 class="welcome-title">BIENVENUE DANS ENERGREEN</h1>
				<p class="subtitle">Connectez-vous pour agir pour la planète</p>

				<div class="form-group">
					<label for="inputEmail">E-mail</label>
					<input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>

				<div class="form-group">
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox">
					<input type="checkbox" name="_remember_me" id="remember_me">
					<label for="remember_me">Se souvenir de moi</label>
				</div>

				<button class="btn-login" type="submit">
					Se connecter
				</button>

				<p class="link-register">
					Pas encore membre ?
					<a href="{{ path('app_register') }}">Créer un compte</a>
				</p>
			</form>
		</div>
	</div>
{% endblock %}
