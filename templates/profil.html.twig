{% extends 'base.html.twig' %}

{% block title %}Mon Profil - ENERGREEN
{% endblock %}

{% block body %}
	<style>
		body {
			background-color: #f0f4f1;
			font-family: 'Montserrat', sans-serif;
		}
		.profile-container {
			max-width: 600px;
			margin: 50px auto;
			padding: 30px;
			background: white;
			border-radius: 12px;
			box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
			border-top: 5px solid #2e7d32;
		}
		.profile-title {
			color: #2e7d32;
			text-align: center;
			margin-bottom: 25px;
			font-family: 'Roboto', sans-serif;
			text-transform: uppercase;
		}
		.form-group {
			margin-bottom: 20px;
		}
		label {
			display: block;
			margin-bottom: 8px;
			font-weight: bold;
			color: #333;
		}
		.info-value {
			width: 100%;
			padding: 12px;
			background-color: #f8f9fa;
			border: 1px solid #e9ecef;
			border-radius: 8px;
			color: #495057;
			font-size: 1rem;
		}
		.btn-edit {
			width: 100%;
			background-color: #2e7d32;
			color: white;
			padding: 14px;
			border-radius: 8px;
			font-weight: bold;
			text-decoration: none;
			display: block;
			text-align: center;
			margin-top: 20px;
			border: none;
			cursor: pointer;
		}
		.btn-edit:hover {
			background-color: #1a5f1e;
		}
		#passwordSection {
			text-align: center;
		}
		#passwordSection input {
			width: 100%;
			padding: 12px;
			border: 2px solid #2e7d32;
			border-radius: 8px;
			font-size: 1rem;
			margin-bottom: 10px;
		}
		.alert {
			padding: 10px;
			border-radius: 5px;
			margin-bottom: 15px;
			text-align: center;
		}
		.alert-error {
			background-color: #f8d7da;
			color: #721c24;
		}
		.lock-icon {
			font-size: 4rem;
			margin-bottom: 20px;
		}
		.session-timer {
			text-align: center;
			color: #888;
			font-size: 0.85rem;
			margin-top: 10px;
		}
	</style>

	<div class="profile-container">
		<h1 class="profile-title">Mon Profil</h1>

		<!-- Section de saisie du mot de passe -->
		<div id="passwordSection">
			<div class="lock-icon">
				<i class="fas fa-lock"></i>
			</div>
			<p style="color: #666; margin-bottom: 20px;">Pour accéder à vos informations personnelles, veuillez saisir votre mot de passe</p>
			<div class="form-group">
				<input type="password" id="passwordInput" placeholder="Mot de passe" autocomplete="current-password">
			</div>
			<div id="errorMessage" class="alert alert-error" style="display: none;"></div>
			<button class="btn-edit" onclick="verifyPassword()">Afficher mes informations</button>
		</div>

		<!-- Section des informations (cachée par défaut) -->
		<div id="profileInfo" style="display: none;">
			{% if app.user %}
				<div class="form-group">
					<label>Email</label>
					<div class="info-value">{{ app.user.email }}</div>
				</div>

				<div style="display: flex; gap: 15px;">
					<div class="form-group" style="flex: 1;">
						<label>Nom</label>
						<div class="info-value">{{ app.user.nom }}</div>
					</div>
					<div class="form-group" style="flex: 1;">
						<label>Prénom</label>
						<div class="info-value">{{ app.user.prenom|default('-') }}</div>
					</div>
				</div>

				<div class="form-group">
					<label>Statut Professionnel</label>
					<div class="info-value">{{ app.user.statutPro }}</div>
				</div>

				<a href="{{ path('app_profile_edit') }}" class="btn-edit">
					<i class="fas fa-edit me-2"></i>Modifier mon profil</a>

				<p style="text-align: center; color: #888; font-size: 0.8rem; margin-top: 30px;">
					Membre depuis le :
					{{ app.user.createdAt|date('d/m/Y') }}
				</p>

				<div class="session-timer">
					Les informations seront cachées après
					<span id="timerDisplay">2:00</span>
					d'inactivité
				</div>

				<p style="text-align: center; margin-top: 15px;">
					<button class="btn-edit" onclick="lockProfile()" style="background-color: #dc3545; width: auto; padding: 10px 20px; display: inline-block;">
						<i class="fas fa-lock me-2"></i>Verrouiller
					</button>
				</p>
			{% endif %}
		</div>
	</div>

	<script>
		let inactivityTimer;
let countdownTimer;
let timeLeft = 120; // 2 minutes en secondes

function verifyPassword() {
const password = document.getElementById('passwordInput').value;
const errorDiv = document.getElementById('errorMessage');

if (! password) {
errorDiv.textContent = 'Veuillez saisir votre mot de passe';
errorDiv.style.display = 'block';
return;
}

// Vérifier le mot de passe via AJAX
fetch('{{ path('app_profile_verify_password') }}', {
method: 'POST',
headers: {
'Content-Type': 'application/json',
'X-Requested-With': 'XMLHttpRequest'
},
body: JSON.stringify(
{password: password}
)
}).then(response => response.json()).then(data => {
if (data.success) { // Mot de passe correct, afficher les informations
document.getElementById('passwordSection').style.display = 'none';
document.getElementById('profileInfo').style.display = 'block';
document.getElementById('passwordInput').value = '';
errorDiv.style.display = 'none';

// Démarrer le timer d'inactivité
startInactivityTimer();
} else { // Mot de passe incorrect
errorDiv.textContent = 'Mot de passe incorrect';
errorDiv.style.display = 'block';
document.getElementById('passwordInput').value = '';
}
}).catch(error => {
errorDiv.textContent = 'Une erreur est survenue';
errorDiv.style.display = 'block';
});
}

function lockProfile() {
document.getElementById('profileInfo').style.display = 'none';
document.getElementById('passwordSection').style.display = 'block';
clearTimeout(inactivityTimer);
clearInterval(countdownTimer);
timeLeft = 120;
}

function startInactivityTimer() {
resetInactivityTimer();

// Événements qui réinitialisent le timer
document.addEventListener('mousemove', resetInactivityTimer);
document.addEventListener('keypress', resetInactivityTimer);
document.addEventListener('click', resetInactivityTimer);
document.addEventListener('scroll', resetInactivityTimer);
}

function resetInactivityTimer() {
clearTimeout(inactivityTimer);
clearInterval(countdownTimer);
timeLeft = 120;
updateTimerDisplay();

// Démarrer le compte à rebours visuel
countdownTimer = setInterval(() => {
timeLeft--;
updateTimerDisplay();

if (timeLeft <= 0) {
clearInterval(countdownTimer);
}
}, 1000);

// Timer principal qui cache les informations
inactivityTimer = setTimeout(() => {
lockProfile();
clearInterval(countdownTimer);
}, 120000); // 2 minutes
}

function updateTimerDisplay() {
const minutes = Math.floor(timeLeft / 60);
const seconds = timeLeft % 60;
document.getElementById('timerDisplay').textContent = `${minutes}:${
seconds.toString().padStart(2, '0')
}`;
}

// Permettre de valider avec Enter
document.getElementById('passwordInput').addEventListener('keypress', function (e) {
if (e.key === 'Enter') {
e.preventDefault();
verifyPassword();
}
});
	</script>
{% endblock %}
