{% extends 'base.html.twig' %}

{% block title %}Mon Profil - ENERGREEN{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f0f4f1;
        font-family: 'Montserrat', sans-serif;
    }
    .profile-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        border-top: 5px solid #2e7d32;
    }
    .profile-title {
        color: #2e7d32;
        text-align: center;
        margin-bottom: 25px;
        font-family: 'Roboto', sans-serif;
        text-transform: uppercase;
    }
    .form-group {
        margin-bottom: 20px;
    }
    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
    }
    .info-value {
        width: 100%;
        padding: 12px;
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        color: #495057;
        font-size: 1rem;
    }
    .btn-edit {
        width: 100%;
        background-color: #2e7d32;
        color: white;
        padding: 14px;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 20px;
    }
    .btn-edit:hover {
        background-color: #1a5f1e;
    }
</style>

<div class="profile-container">
    <h1 class="profile-title">Mon Profil</h1>

    {% if app.user %}
        <div class="form-group">
            <label>Email</label>
            <div class="info-value">{{ app.user.email }}</div>
        </div>

        <div style="display: flex; gap: 15px;">
            <div class="form-group" style="flex: 1;">
                <label>Nom</label>
                <div class="info-value">{{ app.user.nom }}</div>
            </div>
            <div class="form-group" style="flex: 1;">
                <label>Prénom</label>
                <div class="info-value">{{ app.user.prenom|default('-') }}</div>
            </div>
        </div>

        <div class="form-group">
            <label>Statut Professionnel</label>
            <div class="info-value">{{ app.user.statutPro }}</div>
        </div>

        <a href="{{ path('app_profile_edit') }}" class="btn-edit">✏️ Modifier mon profil</a>

        <p style="text-align: center; color: #888; font-size: 0.8rem; margin-top: 30px;">
            Membre depuis le : {{ app.user.createdAt|date('d/m/Y') }}
        </p>
    {% endif %}
</div>
{% endblock %}
